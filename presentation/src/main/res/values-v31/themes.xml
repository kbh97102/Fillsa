<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Fillsa" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@null</item>
        <item name="android:windowSplashScreenBackground">@android:color/transparent</item>


        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.Fillsa</item>

        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>